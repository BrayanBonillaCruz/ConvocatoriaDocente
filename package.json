{
  "name": "convocatoriadocente",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=production DEBUG=convocatoriadocente node ./dist/bin/www",
    "dev": "NODE_ENV=development DEBUG=convocatoriadocente babel-watch --watch ./server/views ./server/bin/www",
    "devc": "NODE_ENV=development webpack serve --config ./webpack.dev.config.js --mode development",
    "build": "npm run buildc && npm run builds",
    "builds": "npm run clean && babel ./server --out-dir dist --copy-files",
    "buildc": "npm run cleanc && webpack --config ./webpack.config.js --mode production",
    "clean": "rm -rf ./dist",
    "cleanc": "rm -f ./public/bundle.js ./public/styles/app.css",
    "lint:c": "eslint ./client/**/*.js",
    "lint:s": "eslint ./server/**/*.js",
    "clean:logs": "rm -rf ./server/logs/*.log"
  },
  "dependencies": {
    "app-root-path": "^3.1.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "express-handlebars": "^7.0.7",
    "http-errors": "~1.6.3",
    "mongoose": "^7.2.0",
    "morgan": "~1.9.1",
    "webpack": "^5.85.0",
    "webpack-dev-middleware": "^4.2.0",
    "webpack-hot-middleware": "^2.25.0",
    "winston": "^3.9.0",
    "yup": "^1.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.5",
    "@babel/core": "^7.22.1",
    "@babel/eslint-parser": "^7.21.8",
    "@babel/preset-env": "^7.22.4",
    "babel-loader": "^9.1.2",
    "babel-plugin-module-resolver": "^5.0.0",
    "babel-preset-minify": "^0.5.2",
    "babel-watch": "^7.7.2",
    "core-js": "^3.30.2",
    "css-loader": "^6.8.1",
    "eslint": "^8.41.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-babel-module": "^5.3.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-webpack-plugin": "^4.0.1",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^2.8.8",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.15.0"
  }
}
